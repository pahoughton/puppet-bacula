# Bacula Director Storage Configuration
#   for <%= @sd_host %>-<%= @device %>
Storage {
  Name = "<%= @sd_name %>"
  Address = <%= @sd_host %>
  Password = "<%= @sd_pass %>"
  Device = "<%= @device %>"
<% if @port -%>
  SD Port = <%= @port %>
<% end -%>
<% if @media_type -%>
  Media Type = <%= @media_type %>
<% end -%>
<% if @autochg -%>
  Autochanger = <%= @autochg %>
<% end -%>
<% if @max_jobs -%>
  Maximum Concurrent Jobs = <%= @max_jobs %>
<% end -%>
<% if @compr -%>
  Allow Compression = <%= @compr %>
<% end -%>
<% if @heart -%>
  Heartbeat Interval = <%= @heart %>
<% end -%>

# sd_host Address
# port SD Port
# pass Password
# device Device
# media_type Media Type
# autochg Autochanger
# max_jobs Maximum Concurrent Jobs
# compr Allow Compression
# heart Heartbeat Interval

}