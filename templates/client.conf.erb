# Bacula Director Client Configuration
#   for <%= @fd_host %>-fd
Client {
  Name = "<%= @fd_host -%>-fd"
  Address = "<%= @fd_host -%>"
  Catalog = "<%= @catalogname -%>"
  Password = "<%= @password -%>"
<% if @f_retention -%>
  File Retention = <%= @f_retention %>
<% end -%>
<% if @j_retention -%>
  Job Retention = <%= @j_retention %>
<% end -%>
<% if @auto_prune -%>
  AutoPrune = <%= @auto_prune %>
<% end -%>
<% if @max_jobs -%>
  Maximum Concurrent Jobs = <%= @max_jobs %>
<% end -%>
}
