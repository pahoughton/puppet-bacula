# bacula director node configuration for <%= @fdname %>
Client {
  Name = "<%= @fdname -%>-fd"
  Address = "<%= @fdname -%>"
  Catalog = "<%= @catalogname -%>"
  Password = "<%= @password -%>"
<% if @f_retention -%>
  File Retention = <%= @f_retention %>
<% end -%>
<% if @j_retention -%>
  Job Retention = <%= @j_retention %>
<% end -%>
<% if @auto_prune -%>
  AutoPrune = <%= @auto_prune %>
<% end -%>
<% if @max_jobs -%>
  Maximum Concurrent Jobs = <%= @max_jobs %>
<% end -%>
}

FileSet {
  Name = "<%= @fdname %>-files"
<% if @ignore_changes -%>
  Ignore FileSet Changes = <%= @ignore_changes %>
<% end -%>
<% if @enable_vss -%>
  Enable VSS = <%= @enable_vss %>
<% end -%>
  Include {
<% if @incopts -%>
    Options {
<% @incopts.each do |opt| -%>
      <%= opt %>
<% end -%>
    }
<% end -%>
<% @incdirs.each do |fn| -%>
    File = "<%= fn %>"
<% end -%>
  }
<% if @options -%>
  Options {
<% @options.each do |opt| -%>
  <%= opt %>
<% end -%>
  }
<% end -%>
<% if @excdirs -%>
  Exclude {
<% @excdirs.each do |fn| -%>
    File = "<%= fn %>"
<% end -%>
  }
<% end -%>
}

Job {
  Name = "<%= @fdname %>"
  Client = "<%= @fdname %>-fd"
  FileSet = "<%= @fdname %>-files"
  JobDefs = "Default"
}
