#
# Bacula File Daemon Configuration
#   for <%= @hostname %>
#   via <%= @dir_host -%>-dir

# Configure the Director which will manage this host's backups
Director {
  Name = "<%= @dir_host -%>-dir"
  Password = "<%= @dir_host -%>-fd-pass"
}

# Now configure the actual File Daemon
FileDaemon {
  Name = "<%= @hostname -%>-fd"
  Working Directory = "<%= @workdir %>"
  PID Directory = "<%= @piddir %>"
  Maximum Concurrent Jobs = <%= @max_jobs %>
}

# Finally, set where the messages are going to go
Messages {
  Name = "<%= @dir_host -%>-msg-standard"
  Director = "<%= @dir_host -%>-dir" = all, !skipped, !restored
}
